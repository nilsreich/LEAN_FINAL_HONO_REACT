{
	"name": "codespaces-blank",
	"module": "src/server/index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev:server": "bun run --hot src/server/index.ts",
		"dev:ui": "CHROME_PATH=$(find /home/codespace/.cache/ms-playwright -name chrome -type f | head -n 1) vite",
		"dev": "bun run dev:server & bun run dev:ui",
		"build:ui": "CHROME_PATH=$(find /home/codespace/.cache/ms-playwright -name chrome -type f | head -n 1) vite build",
		"build:server": "bun build ./src/server/index.ts --compile --outfile server-bin",
		"build": "bun run build:ui && bun run build:server",
		"preview:server": "NODE_ENV=production ./server-bin",
		"preview:ui": "vite preview",
		"preview": "bun run preview:server & bun run preview:ui",
		"db:push": "bunx drizzle-kit push",
		"db:studio": "bunx drizzle-kit studio",
		"lint:fix": "biome check --write .",
		"test": "vitest run",
		"test:e2e": "playwright test"
	},
	"devDependencies": {
		"@biomejs/biome": "2.3.13",
		"@playwright/test": "^1.58.1",
		"@types/bun": "latest",
		"@types/node": "^25.2.0",
		"@types/react": "^19.2.10",
		"@types/react-dom": "^19.2.3",
		"@vitest/ui": "^4.0.18",
		"autoprefixer": "^10.4.24",
		"drizzle-kit": "^0.31.8",
		"playwright": "^1.58.1",
		"vitest": "^4.0.18"
	},
	"peerDependencies": {
		"typescript": "^5.9.3"
	},
	"dependencies": {
		"@hono/zod-validator": "^0.7.6",
		"@libsql/client": "^0.17.0",
		"@tailwindcss/vite": "^4.1.18",
		"@tanstack/react-query": "^5.90.20",
		"@tanstack/react-router": "^1.158.0",
		"@vitejs/plugin-react": "^5.1.3",
		"better-auth": "^1.4.18",
		"daisyui": "^5.5.17",
		"drizzle-orm": "^0.45.1",
		"hono": "^4.11.7",
		"lucide-react": "^0.563.0",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"tailwindcss": "^4.1.18",
		"vite": "^7.3.1",
		"vite-plugin-pwa": "^1.2.0",
		"zod": "^4.3.6"
	}
}
